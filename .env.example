# Core Gemini settings
GEMINI_API_KEY=your_gemini_api_key_here
# Default runtime model used by Perceptix demos.
GEMINI_MODEL_NAME=models/gemini-3-pro-preview

# API server
API_HOST=127.0.0.1
API_PORT=8000

# Demo authentication credentials used by /api/v1/auth/token
DEMO_USERNAME=demo
DEMO_PASSWORD=secret
ADMIN_USERS=demo

# JWT settings (set JWT_SECRET_KEY in production)
JWT_SECRET_KEY=change-me-before-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Runtime mode
PERCEPTIX_MODE=DEMO
